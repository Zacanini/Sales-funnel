@page "/formulariocadastro"
@inject NavigationManager Navigation

<div class="flex flex-col items-center justify-center min-h-screen bg-green-100 p-8">
    <h1 class="text-3xl font-bold mb-6">Cadastre-se para receber novidades</h1>

    <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
        <div class="mb-4">
            <input class="border rounded w-full py-2 px-3" placeholder="Nome" />
        </div>
        <div class="mb-4">
            <input class="border rounded w-full py-2 px-3" placeholder="Email" type="email" />
        </div>
        <div class="mb-6">
            <input class="border rounded w-full py-2 px-3" placeholder="Telefone" />
        </div>
        <button 
            class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded w-full"
            @onclick="IrParaConteudo">
            Enviar
        </button>
    </div>
</div>

@code {
    private void IrParaConteudo()
    {
        Navigation.NavigateTo("/conteudoengajamento");
    }
}
