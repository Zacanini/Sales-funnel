@namespace Sales_funnel.Components.Global
@inject NavigationManager NavigationManager

<PageTitle>@(string.IsNullOrEmpty(Title) ? "PWA Master" : $"{Title} | PWA Master")</PageTitle>
<HeadContent>
    <meta name="description" content="@Description" />
    <meta property="og:title" content="@(string.IsNullOrEmpty(Title) ? "PWA Master" : $"{Title} | PWA Master")" />
    <meta property="og:description" content="@Description" />
    <meta property="og:url" content="@NavigationManager.Uri" />
    <meta property="og:type" content="website" />
    @if (!string.IsNullOrEmpty(ImageUrl))
    {
        <meta property="og:image" content="@ImageUrl" />
    }
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@(string.IsNullOrEmpty(Title) ? "PWA Master" : $"{Title} | PWA Master")" />
    <meta name="twitter:description" content="@Description" />
    @if (!string.IsNullOrEmpty(ImageUrl))
    {
        <meta name="twitter:image" content="@ImageUrl" />
    }
    @if (Keywords?.Length > 0)
    {
        <meta name="keywords" content="@string.Join(", ", Keywords)" />
    }
    
    <!-- Fonte Inter do Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Aplicação da fonte Inter via CSS -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</HeadContent>

@code {
    [Parameter]
    public string Title { get; set; } = "";
    
    [Parameter]
    public string Description { get; set; } = "Domine aplicações web progressivas em semanas, não em meses. O PWA Master é um e-book completo para desenvolvedores que querem se destacar no mercado.";
    
    [Parameter]
    public string ImageUrl { get; set; } = "";
    
    [Parameter]
    public string[] Keywords { get; set; } = new[] { 
        "PWA", "Progressive Web Apps", "Desenvolvimento Web",
        "Aplicativos Web", "Frontend", "Desenvolvimento Frontend" 
    };
}