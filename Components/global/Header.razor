@namespace Sales_funnel.Components.Global
@using Sales_funnel.Components.UI

<header class="bg-white shadow-sm">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
        <a href="/" class="flex items-center gap-2">
            <div class="bg-blue-500 text-white p-2 rounded-md">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="5" y="2" width="14" height="20" rx="2" ry="2" />
                    <path d="M12 18h.01" />
                    <path d="M8 6h8" />
                    <path d="M8 10h8" />
                    <path d="M8 14h4" />
                </svg>
            </div>
            <div>
                <span class="font-bold text-lg">PWA Master</span>
                @if (ShowTagline)
                {
                    <p class="text-sm text-gray-600 hidden md:block">Domine aplicações web progressivas em semanas, não em meses</p>
                }
            </div>
        </a>
        
        @if (ShowNavigation)
        {   
            @if (ShowCTA)
            {
                <div class="hidden md:block">
                    <Button Variant="primary" Size="sm">Acessar E-book</Button>
                </div>
            }
        }
    </div>
</header>

@code {
    [Parameter]
    public bool ShowTagline { get; set; } = true;
    
    [Parameter]
    public bool ShowNavigation { get; set; } = true;
    
    [Parameter]
    public bool ShowCTA { get; set; } = true;
}