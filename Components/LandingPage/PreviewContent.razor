@namespace Sales_funnel.Components.LandingPage
@using Sales_funnel.Components.UI

<section class="py-24 bg-gradient-to-b from-white to-blue-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <Sales_funnel.Components.UI.Badge Class="mb-4 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-50 text-blue-600 shadow-sm">Conteúdo Premium</Sales_funnel.Components.UI.Badge>
            <h2 class="text-3xl md:text-4xl font-bold mb-6 relative inline-block">
                Domine o desenvolvimento de <span class="text-blue-600">PWAs</span>
                <div class="absolute -bottom-2 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full transform translate-y-1"></div>
            </h2>
            <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
                O curso PWA Master cobre todos os aspectos essenciais e avançados para você criar 
                aplicações web progressivas de alto desempenho e experiência premium.
            </p>
        </div>

        <div class="flex flex-col lg:flex-row gap-12 mb-16 items-center">
            <div class="lg:w-1/2">
                <div class="relative">
                    <div class="absolute -top-4 -left-4 bg-yellow-400 text-blue-800 text-sm font-bold py-2 px-4 rounded-lg rotate-6 shadow-lg z-10">
                        Bestseller
                    </div>
                    <div class="relative overflow-hidden bg-gradient-to-br from-blue-600 to-purple-600 p-3 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
                        <!-- Imagem personalizada do curso PWA Master -->
                        <div class="rounded-lg w-full h-auto bg-gradient-to-br from-blue-800 to-purple-900 overflow-hidden">
                            <div class="p-8 flex flex-col items-center justify-center min-h-[500px] relative">
                                <!-- Ícone PWA -->
                                <div class="mb-8 bg-white p-6 rounded-full w-32 h-32 flex items-center justify-center shadow-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-16 h-16 text-blue-600">
                                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                                    </svg>
                                </div>
                                
                                <!-- Título do Curso -->
                                <h2 class="text-4xl font-bold text-white mb-4 text-center">PWA Master</h2>
                                <p class="text-blue-100 text-xl mb-8 text-center">Guia Completo 2025</p>
                                
                                <!-- Elementos decorativos -->
                                <div class="absolute top-0 right-0 w-32 h-32 bg-blue-400 opacity-20 rounded-full -translate-y-1/2 translate-x-1/2"></div>
                                <div class="absolute bottom-0 left-0 w-40 h-40 bg-purple-400 opacity-20 rounded-full translate-y-1/2 -translate-x-1/2"></div>
                                
                                <!-- Technologies Icons -->
                                <div class="flex space-x-4 mt-4">
                                    <div class="bg-white bg-opacity-20 p-3 rounded-lg">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-300">
                                            <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"></path>
                                            <line x1="16" y1="8" x2="2" y2="22"></line>
                                            <line x1="17.5" y1="15" x2="9" y2="15"></line>
                                        </svg>
                                    </div>
                                    <div class="bg-white bg-opacity-20 p-3 rounded-lg">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-300">
                                            <path d="M18 10h-4V4h-4v6H6l6 6 6-6z"></path>
                                            <path d="M6 20v-2h12v2"></path>
                                        </svg>
                                    </div>
                                    <div class="bg-white bg-opacity-20 p-3 rounded-lg">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-300">
                                            <path d="M10.5 20H4a2 2 0 0 1-2-2V5c0-1.1.9-2 2-2h3.93a2 2 0 0 1 1.66.9l.82 1.2a2 2 0 0 0 1.66.9H20a2 2 0 0 1 2 2v3"></path>
                                            <circle cx="18" cy="18" r="3"></circle>
                                            <path d="m19.5 15-3 6"></path>
                                            <path d="m16.5 15 3 6"></path>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white bg-opacity-90 rounded-full w-20 h-20 flex items-center justify-center shadow-xl hover:bg-opacity-100 hover:scale-110 transition-all duration-300 cursor-pointer">
                            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600">
                                <polygon points="5 3 19 12 5 21 5 3"></polygon>
                            </svg>
                        </div>
                    </div>
                    
                    <div class="absolute -bottom-6 -right-6 bg-green-500 text-white text-sm font-bold py-2 px-4 rounded-lg -rotate-12 shadow-lg z-10">
                        Atualizado em 2025
                    </div>
                </div>
                
                <div class="mt-12 flex flex-wrap justify-center gap-4">
                    <div class="flex items-center bg-white py-2 px-4 rounded-full shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-500 me-2">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                            <polyline points="22 4 12 14.01 9 11.01"></polyline>
                        </svg>
                        <span>20+ horas de conteúdo</span>
                    </div>
                    <div class="flex items-center bg-white py-2 px-4 rounded-full shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-500 me-2">
                            <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                            <line x1="8" y1="21" x2="16" y2="21"></line>
                            <line x1="12" y1="17" x2="12" y2="21"></line>
                        </svg>
                        <span>Exemplos práticos</span>
                    </div>
                    <div class="flex items-center bg-white py-2 px-4 rounded-full shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-500 me-2">
                            <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                        </svg>
                        <span>Certificado</span>
                    </div>
                </div>
            </div>
            
            <div class="lg:w-1/2">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    @foreach (var module in Modules)
                    {
                        <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md border-l-4 @module.BorderColor hover:translate-y-[-2px] transition-all duration-300">
                            <h3 class="font-bold text-xl mb-4 flex items-center">
                                <span class="@module.BgColor text-white w-8 h-8 rounded-full flex items-center justify-center mr-3 shadow-sm">@module.Number</span>
                                @module.Title
                            </h3>
                            <ul class="space-y-3 text-gray-600">
                                @foreach (var topic in module.Topics)
                                {
                                    <li class="flex items-start">
                                        <svg class="text-green-500 w-5 h-5 mr-2 mt-0.5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                        </svg>
                                        <span>@topic</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
                
                <div class="mt-8 bg-gradient-to-r from-blue-50 to-purple-50 p-6 rounded-xl border border-blue-100 hover:shadow-md transition-shadow duration-300">
                    <div class="flex items-start">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-500 mt-1 me-3">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M12 16v-4"></path>
                            <path d="M12 8h.01"></path>
                        </svg>
                        <p class="text-gray-700">
                            <span class="font-semibold">Bônus exclusivo:</span> Acesso a uma comunidade privada de desenvolvedores PWA, suporte direto do instrutor e atualizações gratuitas por 1 ano.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col items-center">
            <div class="bg-blue-600 text-white py-2 px-6 rounded-full font-bold mb-4 animate-pulse">
                Oferta por tempo limitado
            </div>
            <Sales_funnel.Components.UI.Button Variant="primary" Size="lg" OnClick="OnCallToActionClick" Class="bg-yellow-400 text-blue-800 hover:bg-yellow-300 py-4 px-8 rounded-xl shadow-lg transform transition hover:-translate-y-1 text-lg font-bold">
                <span class="flex items-center">
                    Quero dominar PWAs agora
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ms-2">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </span>
            </Sales_funnel.Components.UI.Button>
            <p class="text-gray-600 mt-4 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-500 me-2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                Garantia de satisfação de 30 dias ou seu dinheiro de volta
            </p>
        </div>
    </div>
</section>

@code {
    [Parameter]
    public EventCallback OnCallToActionClick { get; set; }
    
    private class ContentModule
    {
        public string Number { get; set; } = "";
        public string Title { get; set; } = "";
        public List<string> Topics { get; set; } = new List<string>();
        public string BgColor { get; set; } = "bg-blue-500";
        public string BorderColor { get; set; } = "border-blue-500";
    }
    
    private List<ContentModule> Modules = new List<ContentModule>
    {
        new ContentModule
        {
            Number = "1",
            Title = "Fundamentos de PWA",
            Topics = new List<string>
            {
                "O que é uma PWA e como ela se difere de aplicativos nativos",
                "Configuração do ambiente de desenvolvimento",
                "Estrutura de arquivos e configurações essenciais"
            },
            BgColor = "bg-blue-500",
            BorderColor = "border-blue-500"
        },
        new ContentModule
        {
            Number = "2",
            Title = "Service Workers",
            Topics = new List<string>
            {
                "Ciclo de vida e funcionamento dos Service Workers",
                "Estratégias de cache para desempenho offline",
                "Implementação de experiências offline robustas"
            },
            BgColor = "bg-purple-500",
            BorderColor = "border-purple-500"
        },
        new ContentModule
        {
            Number = "3",
            Title = "Web App Manifest",
            Topics = new List<string>
            {
                "Configuração do arquivo manifest.json",
                "Personalização da instalação de PWAs",
                "Adaptação para diferentes dispositivos e plataformas"
            },
            BgColor = "bg-green-500",
            BorderColor = "border-green-500"
        },
        new ContentModule
        {
            Number = "4",
            Title = "PWA Avançado",
            Topics = new List<string>
            {
                "Implementação de notificações push",
                "Background Sync para operações offline",
                "Acesso a APIs nativas (câmera, geolocalização, etc)"
            },
            BgColor = "bg-yellow-500",
            BorderColor = "border-yellow-500"
        }
    };
}