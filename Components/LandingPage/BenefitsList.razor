@namespace Sales_funnel.Components.LandingPage
@using Sales_funnel.Components.UI

<section class="py-24 bg-white relative overflow-hidden">
    <!-- Elementos decorativos de fundo refinados -->
    <div class="absolute inset-0 overflow-hidden z-0 opacity-5">
        <div class="absolute top-0 left-0 w-full h-48 bg-gradient-to-b from-blue-50 to-transparent"></div>
        <div class="absolute right-0 top-1/4 w-60 h-60 rounded-full bg-yellow-100 opacity-40 blur-2xl"></div>
        <div class="absolute left-20 bottom-1/3 w-80 h-80 rounded-full bg-blue-100 opacity-30 blur-3xl"></div>
        <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 800 800" class="opacity-10">
            <defs>
                <pattern id="grid-pattern" width="50" height="50" patternUnits="userSpaceOnUse">
                    <path d="M 50 0 L 0 0 0 50" fill="none" stroke="currentColor" stroke-width="1" />
                </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#grid-pattern)" />
        </svg>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-16 relative">
            <!-- Elemento sutil de destaque -->
            <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 w-20 h-1.5 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full"></div>
            
            <Badge Class="mb-4 inline-flex items-center px-4 py-1.5 rounded-full text-sm font-medium bg-blue-50 text-blue-600 shadow-sm">Diferenciais</Badge>
            
            <h2 class="text-3xl md:text-4xl font-bold mb-6 relative inline-block">
                Por que aprender PWAs <span class="text-blue-600">é essencial</span>
                <div class="absolute -bottom-2 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full transform translate-y-1"></div>
            </h2>
            
            <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
                Desenvolvedores que dominam PWAs estão entre os <span class="font-semibold">mais valorizados</span> no mercado atual.
                O <span class="font-bold text-blue-600">PWA Master</span> foi criado para transformar você em um especialista nesta tecnologia.
            </p>
            
            <!-- Contador de estatísticas para reforço social -->
            <div class="flex flex-wrap justify-center gap-8 mt-10">
                <div class="text-center">
                    <span class="block text-4xl font-bold text-blue-600 mb-1">500+</span>
                    <span class="text-gray-500">Desenvolvedores</span>
                </div>
                <div class="text-center">
                    <span class="block text-4xl font-bold text-blue-600 mb-1">98%</span>
                    <span class="text-gray-500">Taxa de Conclusão</span>
                </div>
                <div class="text-center">
                    <span class="block text-4xl font-bold text-blue-600 mb-1">4.9/5</span>
                    <span class="text-gray-500">Avaliação Média</span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            @foreach (var benefit in Benefits)
            {
                <div class="group bg-white p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 flex flex-col h-full transform hover:-translate-y-1 hover:border-blue-100">
                    <div class="@benefit.IconBgColor p-4 rounded-xl w-16 h-16 flex items-center justify-center mb-6 shadow-sm group-hover:scale-110 transition-transform duration-300">
                        <span class="@benefit.IconColor">
                            @((MarkupString)benefit.Icon)
                        </span>
                    </div>
                    <h3 class="text-xl font-bold mb-3 group-hover:text-blue-600 transition-colors">@benefit.Title</h3>
                    <p class="text-gray-600 flex-grow">@benefit.Description</p>
                    <div class="mt-4 flex items-center text-blue-600 font-medium opacity-70 group-hover:opacity-100 transition-opacity">
                        <span>Saiba mais</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ms-1 transform group-hover:translate-x-1 transition-transform">
                            <path d="m9 18 6-6-6-6"></path>
                        </svg>
                    </div>
                </div>
            }
        </div>
        
        <div class="mt-20 text-center">
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-8 md:p-10 rounded-2xl shadow-xl max-w-4xl mx-auto relative overflow-hidden">
                <!-- Elementos decorativos sutis -->
                <div class="absolute top-0 right-0 w-40 h-40 bg-white opacity-10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
                <div class="absolute bottom-0 left-0 w-32 h-32 bg-white opacity-10 rounded-full translate-y-1/2 -translate-x-1/2"></div>
                
                <h3 class="text-2xl font-bold mb-4 text-white relative">
                    Pronto para dominar o desenvolvimento de PWAs?
                    <span class="block w-20 h-1 bg-yellow-300 mx-auto mt-3"></span>
                </h3>
                <p class="text-blue-100 mb-8 max-w-2xl mx-auto">
                    Junte-se a mais de <span class="font-bold text-white">500 desenvolvedores</span> que estão elevando suas carreiras com conhecimento prático em PWAs.
                </p>
                <Button Variant="primary" Size="lg" OnClick="OnCTAButtonClick" Class="bg-yellow-400 text-blue-800 hover:bg-yellow-300 shadow-lg transform transition hover:-translate-y-1 font-bold px-8">
                    <span class="flex items-center">
                        Começar minha jornada PWA
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ms-2">
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                            <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                    </span>
                </Button>
                
                <!-- Escassez subtil para criar urgência -->
                <div class="mt-6 bg-blue-600 bg-opacity-30 py-2 px-4 rounded-full inline-flex items-center text-sm text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                        <path d="M12 2v10l4.24 4.24"></path>
                        <circle cx="12" cy="12" r="10"></circle>
                    </svg>
                    <span>Apenas 50 vagas disponíveis neste mês</span>
                </div>
            </div>
        </div>
    </div>
</section>

