@namespace Sales_funnel.Components.UI

<div class="@GetClasses()">
    <div class="mb-4 relative">
        <svg class="absolute -top-2 -left-2 text-gray-300 w-8 h-8 opacity-50" fill="currentColor" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
            <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z"/>
        </svg>
        <p class="text-gray-600 pl-6">@Quote</p>
    </div>

    <div class="flex items-center">
        @if(!string.IsNullOrEmpty(AvatarUrl))
        {
            <img src="@AvatarUrl" alt="@Author" class="w-10 h-10 rounded-full mr-3" />
        }
        <div>
            <div class="font-bold">@Author</div>
            @if(!string.IsNullOrEmpty(Role))
            {
                <div class="text-sm text-gray-600">@Role</div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Quote { get; set; } = "";
    
    [Parameter]
    public string Author { get; set; } = "";
    
    [Parameter]
    public string Role { get; set; } = "";
    
    [Parameter]
    public string AvatarUrl { get; set; } = "";
    
    [Parameter]
    public string Class { get; set; } = "";
    
    private string GetClasses()
    {
        return $"bg-white p-5 rounded shadow-sm border border-gray-100 {Class}";
    }
}