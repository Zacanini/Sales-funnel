@namespace Sales_funnel.Components.PaginaOferta
@using Sales_funnel.Components.UI

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300">
    <div>
        <div class="flex items-center mb-2">
            <Badge Variant="success" Size="sm" Class="mr-2">@ProductType</Badge>
            <span class="text-sm text-amber-500 font-medium flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                </svg>
                Oferta por tempo limitado
            </span>
        </div>
        <h1 class="text-3xl md:text-4xl font-bold mb-3 bg-gradient-to-r from-blue-600 to-indigo-700 bg-clip-text text-transparent">@Title</h1>
        <p class="text-lg text-gray-600 mb-5 leading-relaxed">@Description</p>
        
        <div class="flex items-center mb-6 bg-gray-50 p-3 rounded-lg border-l-4 border-yellow-400">
            <div class="flex">
                @for (int i = 0; i < 5; i++)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" class="@(i < Rating ? "text-yellow-500" : "text-gray-300") w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                }
            </div>
            <span class="ml-2 text-gray-700 font-medium">@Rating.ToString("0.0")/5.0</span>
            <span class="mx-2 text-gray-400">|</span>
            <span class="text-gray-700">@ReviewCount avaliações</span>
            <span class="ml-2 text-emerald-600 text-sm font-medium">Verificadas</span>
        </div>
        
        <div class="space-y-4 mb-8">
            @foreach (var item in HighlightedFeatures)
            {
                <div class="flex items-start group">
                    <div class="flex-shrink-0 mt-1 bg-blue-100 rounded-full p-1 group-hover:bg-blue-200 transition-colors duration-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <p class="ml-3 text-gray-700 group-hover:text-gray-900 transition-colors duration-200">@item</p>
                </div>
            }
        </div>
        
        <div class="flex flex-col sm:flex-row gap-3">
            <Button Variant="primary" Size="lg" OnClick="OnPurchaseClick" Class="sm:flex-1 transform transition-transform duration-200 hover:scale-105 font-bold">
                @PurchaseButtonText
            </Button>
            
            <Button Variant="outline" Size="lg" OnClick="OnSecondaryClick">
                @SecondaryButtonText
            </Button>
        </div>
        
        <div class="mt-4 flex items-center justify-center sm:justify-start text-gray-500 text-sm space-x-4">
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2z" />
                </svg>
                <span>Pagamento seguro</span>
            </div>
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Acesso imediato</span>
            </div>
        </div>
        
        <div class="mt-5 flex items-center bg-emerald-50 p-3 rounded-lg border border-emerald-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-emerald-500 mr-3" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div>
                <span class="font-medium text-emerald-700">@GuaranteeText</span>
                <p class="text-sm text-emerald-600 mt-1">Sem perguntas, sem burocracia</p>
            </div>
        </div>
    </div>
    
    <div class="flex justify-center lg:justify-end">
        <div class="relative max-w-md">
            <img 
                src="https://www.mytaskpanel.com/wp-content/uploads/2023/10/consulting-blog-32.webp" 
                alt="@Title"
                class="rounded-lg shadow-lg w-full h-auto transform hover:rotate-1 transition-transform duration-300"
            />
            
            <div class="absolute -top-4 -right-4 bg-red-500 text-white font-bold py-3 px-6 rounded-full transform rotate-12 shadow-lg animate-pulse">
                @DiscountText
            </div>
            
            <div class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 bg-white px-4 py-1 rounded-full shadow-md text-sm font-medium text-gray-600 whitespace-nowrap">
                <span class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-amber-500 mr-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zM12 2a1 1 0 01.967.744L14.146 7.2 17.5 9.134a1 1 0 010 1.732l-3.354 1.935-1.18 4.455a1 1 0 01-1.933 0L9.854 12.8 6.5 10.866a1 1 0 010-1.732l3.354-1.935 1.18-4.455A1 1 0 0112 2z" clip-rule="evenodd" />
                    </svg>
                    Atualizado em @DateTime.Now.ToString("MMM/yyyy")
                </span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnPurchaseClick { get; set; }
    
    [Parameter]
    public EventCallback OnSecondaryClick { get; set; }
    
    [Parameter]
    public string ImageUrl { get; set; }
    
    private string ProductType { get; set; } = "E-book Especializado";
    private string Title { get; set; } = "PWA Master: Domine o Desenvolvimento de Progressive Web Apps";
    private string Description { get; set; } = "Um guia completo e prático para desenvolvedores que querem criar aplicações web modernas, responsivas e com funcionalidade offline. Aprenda as técnicas dos especialistas.";
    private double Rating { get; set; } = 4.9;
    private int ReviewCount { get; set; } = 243;
    private List<string> HighlightedFeatures { get; set; } = new List<string>
    {
        "Mais de 200 páginas de conteúdo prático e atualizado",
        "Exemplos de código reutilizáveis para seus projetos",
        "Estratégias de cache e otimização de desempenho",
        "Técnicas avançadas para notificações push",
        "Implementação completa de offline-first"
    };
    private string PurchaseButtonText { get; set; } = "Comprar por R$ 97,00";
    private string SecondaryButtonText { get; set; } = "Ver detalhes";
    private string GuaranteeText { get; set; } = "Garantia de devolução do dinheiro em 30 dias";
    private string DiscountText { get; set; } = "35% OFF";
}