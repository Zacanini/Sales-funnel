@namespace Sales_funnel.Components.ConteudoEngajamento
@using Sales_funnel.Components.UI

<div class="bg-gradient-to-br from-indigo-900 via-blue-800 to-purple-900 rounded-xl shadow-xl overflow-hidden border border-indigo-800">
    <div class="p-8 md:p-10 relative overflow-hidden">
        <!-- Elementos decorativos modernos e sutis -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-400 opacity-5 rounded-full blur-xl -translate-y-1/3 translate-x-1/3"></div>
        <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-purple-300 opacity-10 rounded-full blur-xl"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-32 bg-gradient-to-r from-yellow-400 to-amber-300 opacity-5 rotate-12 rounded-full blur-xl"></div>
        
        <div class="relative z-10">
            <div class="md:flex items-center gap-8 lg:gap-12">
                <div class="md:w-3/4 mb-8 md:mb-0">
                    <div class="inline-flex items-center gap-2 bg-indigo-800/50 backdrop-blur-sm px-4 py-1.5 rounded-full border border-indigo-600/50 mb-6">
                        <span class="animate-pulse">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-amber-300" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        </span>
                        <span class="text-white text-xs font-bold uppercase tracking-wide">Bônus Exclusivo</span>
                    </div>
                    
                    <h2 class="text-2xl md:text-3xl lg:text-4xl font-extrabold mb-6 text-white leading-tight">
                        Transforme seu conhecimento com recursos <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-300 to-yellow-400">premium</span>
                    </h2>
                    
                    <p class="text-blue-100 mb-6 text-lg leading-relaxed font-light">
                        Desenvolvedores profissionais têm acesso a conteúdos exclusivos que levam o desenvolvimento 
                        de PWAs a outro nível. Conheça os recursos da versão premium:
                    </p>
                    
                    <ul class="space-y-4 text-blue-50 mb-8">
                        <li class="flex items-start">
                            <div class="flex-shrink-0 h-6 w-6 rounded-full bg-gradient-to-br from-amber-300 to-yellow-400 flex items-center justify-center shadow-glow mr-3 mt-0.5">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-indigo-900" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <span class="font-medium">Três projetos completos com código-fonte para download imediato</span>
                        </li>
                        <li class="flex items-start">
                            <div class="flex-shrink-0 h-6 w-6 rounded-full bg-gradient-to-br from-amber-300 to-yellow-400 flex items-center justify-center shadow-glow mr-3 mt-0.5">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-indigo-900" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <span class="font-medium">Webinars mensais ao vivo sobre técnicas avançadas de PWA</span>
                        </li>
                        <li class="flex items-start">
                            <div class="flex-shrink-0 h-6 w-6 rounded-full bg-gradient-to-br from-amber-300 to-yellow-400 flex items-center justify-center shadow-glow mr-3 mt-0.5">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-indigo-900" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <span class="font-medium">Acesso exclusivo à comunidade de desenvolvedores premium</span>
                        </li>
                    </ul>
                    
                    <div class="md:hidden flex justify-center mb-6">
                        <div class="relative">
                            <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-600 blur-xl opacity-30 rounded-2xl transform rotate-2"></div>
                            <div class="relative bg-white p-4 rounded-lg shadow-xl transform hover:scale-105 transition-transform duration-300">
                                <div class="absolute -top-3 -right-3 bg-amber-400 text-indigo-900 text-xs font-bold py-1 px-3 rounded-full shadow-lg">
                                    PREMIUM
                                </div>
                                <div class="w-40 h-48 rounded shadow-inner bg-gradient-to-br from-indigo-100 to-blue-50 p-4 flex flex-col justify-center items-center">
                                    <img 
                                        src="/icon-192.png" 
                                        alt="E-book PWA Master Premium" 
                                        class="w-24 h-24 object-contain mb-3"
                                    />
                                    <span class="text-center text-indigo-900 font-bold">E-book PWA Master</span>
                                </div>
                                <div class="mt-3 text-center">
                                    <span class="block text-gray-800 font-bold">Edição Premium</span>
                                    <span class="text-sm text-gray-600">+3 projetos completos</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="md:w-1/4 hidden md:flex justify-center">
                    <div class="relative group">
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-600 blur-xl opacity-30 rounded-2xl transform rotate-3 group-hover:opacity-50 transition-opacity"></div>
                        <div class="relative bg-white rounded-lg shadow-xl transform rotate-3 group-hover:rotate-0 transition-all duration-500">
                            <div class="absolute -top-4 -right-4 bg-gradient-to-r from-amber-400 to-yellow-500 text-indigo-900 text-xs font-bold py-1 px-3 rounded-full shadow-lg">
                                PREMIUM
                            </div>
                            <div class="p-4">
                                <div class="w-40 h-48 rounded shadow-inner bg-gradient-to-br from-indigo-100 to-blue-50 p-4 flex flex-col justify-center items-center">
                                    <img 
                                        src="/icon-192.png" 
                                        alt="E-book PWA Master Premium" 
                                        class="w-24 h-24 object-contain mb-3"
                                    />
                                    <span class="text-center text-indigo-900 font-bold">E-book PWA Master</span>
                                </div>
                                <div class="mt-3 text-center">
                                    <span class="block text-gray-800 font-bold">Edição Premium</span>
                                    <span class="text-sm text-gray-600">+3 projetos completos</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-8 flex flex-col items-center">
                <Button 
                    Variant="custom" 
                    Size="lg" 
                    OnClick="@(() => OnVerPremiumClick.InvokeAsync())" 
                    Class="bg-gradient-to-r from-amber-400 to-yellow-500 hover:from-amber-500 hover:to-yellow-600 text-indigo-900 font-bold px-8 py-4 rounded-full shadow-lg transform transition hover:-translate-y-1 hover:shadow-xl focus:ring-4 focus:ring-yellow-300/50 focus:outline-none"
                >
                    <span class="flex items-center">
                        Ver opção premium
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </span>
                </Button>
                
                <div class="mt-5 text-center">
                    <p class="inline-flex items-center bg-indigo-800/40 backdrop-blur-sm px-4 py-2 rounded-full text-white font-medium">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-amber-300" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                        Acesso seguro por apenas <span class="font-bold text-amber-300 ml-1">R$ 97,00</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnVerPremiumClick { get; set; }
}