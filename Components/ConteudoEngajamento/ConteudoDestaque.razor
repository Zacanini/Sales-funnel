@namespace Sales_funnel.Components.ConteudoEngajamento
@using Sales_funnel.Components.UI

<div class="bg-gradient-to-br from-white to-blue-50 rounded-xl shadow-lg overflow-hidden border border-blue-100 transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
    <div class="md:flex">
        <div class="md:w-2/5 relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-600 to-purple-600 opacity-80"></div>
            <div class="absolute top-4 left-0 bg-yellow-400 text-blue-800 text-xs font-bold px-4 py-1 uppercase rounded-r-full shadow-md">
                Destaque da Semana
            </div>
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="bg-white bg-opacity-90 rounded-full p-3 shadow-lg transform transition-transform hover:scale-110 cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>
        </div>
        <div class="p-8 md:w-3/5 flex flex-col justify-between relative">
            <div class="absolute top-0 right-0 w-32 h-32 bg-blue-50 opacity-50 rounded-full -translate-y-1/2 translate-x-1/2 z-0"></div>
            <div class="relative z-10">
                <div class="flex items-center mb-4">
                    <span class="bg-gradient-to-r from-purple-500 to-purple-700 text-white text-xs font-semibold px-4 py-1.5 rounded-full mr-3 shadow-sm">Tutorial Premium</span>
                    <span class="text-gray-500 text-sm flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                        </svg>
                        20 min de leitura
                    </span>
                </div>
                <h3 class="text-3xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600">
                    Desenvolvendo sua primeira PWA completa em 7 passos
                </h3>
                <p class="text-gray-700 mb-6 text-lg leading-relaxed">
                    Neste tutorial especial, você aprenderá como construir uma PWA do zero com todos os recursos essenciais: 
                    service workers, manifesto, cache inteligente e funcionalidades offline. Um guia prático que 
                    transformará a maneira como você desenvolve para a web.
                </p>
                <div class="flex flex-wrap gap-2 mb-6">
                    <span class="bg-blue-100 text-blue-600 text-xs font-medium px-3 py-1 rounded-full">Service Workers</span>
                    <span class="bg-green-100 text-green-600 text-xs font-medium px-3 py-1 rounded-full">Offline First</span>
                    <span class="bg-purple-100 text-purple-600 text-xs font-medium px-3 py-1 rounded-full">Manifesto</span>
                    <span class="bg-yellow-100 text-yellow-600 text-xs font-medium px-3 py-1 rounded-full">Instalação</span>
                </div>
            </div>
            
            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mt-4 border-t border-gray-100 pt-4">
                <div class="flex items-center mb-4 sm:mb-0">
                    <div class="flex items-center">
                        <img class="h-10 w-10 rounded-full border-2 border-blue-100 object-cover shadow-sm" src="https://randomuser.me/api/portraits/men/32.jpg" alt="Autor" />
                        <div class="ml-3">
                            <span class="block font-medium text-gray-900">Pedro Almeida</span>
                            <span class="block text-xs text-gray-500">Desenvolvedor PWA Senior</span>
                        </div>
                    </div>
                </div>
                <Button Variant="primary" Size="md" OnClick="@(() => OnConteudoDestaqueClick.InvokeAsync())" Class="bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 shadow-md">
                    <span class="flex items-center">
                        Acessar Tutorial
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </span>
                </Button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnConteudoDestaqueClick { get; set; }
}