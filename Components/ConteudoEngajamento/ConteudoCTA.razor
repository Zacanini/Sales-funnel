@code {
    [Parameter]
    public EventCallback OnCTAClick { get; set; }
    
    private async Task VerEbookCompleto()
    {
        await OnCTAClick.InvokeAsync();
    }
    
    // Objeto para a função window.scrollTo
    private class Window
    {
        public void scrollTo(int x, int y) {}
    }
    
    private Window window = new Window();
