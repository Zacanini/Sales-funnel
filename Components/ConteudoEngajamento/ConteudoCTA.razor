    <div class="absolute -bottom-16 -right-16 w-32 h-32 bg-blue-50 rounded-full opacity-70 animate-pulse"></div>
    <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-purple-50 rounded-full opacity-70"></div>
    <div class="absolute top-10 right-10 w-20 h-20 bg-yellow-50 rounded-full opacity-40"></div>
    
