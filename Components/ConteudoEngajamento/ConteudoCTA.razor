            <Button Variant="primary" Size="lg" OnClick="@(() => NavigationManager.NavigateTo("/pagina-oferta"))" Class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 shadow-lg transform transition hover:-translate-y-1 px-8 py-4 relative overflow-hidden group">
